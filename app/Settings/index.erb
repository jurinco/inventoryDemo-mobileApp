<div class="container-fluid">

  <div class="row">
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
    </div>
    <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
      <h3 class="text-center">Settings</h3>
    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
    </div>
  </div>

  <div class="row">
    <div class="list-group">

      <% if @msg %>
          <div class="alert alert-danger"><%= @msg %></div>
      <% end %>



      <li class="list-group-item">
        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <span pull-right>Client ID:</span>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <%= Rhom::Rhom::client_id %>
          </div>
        </div>
      </li>

      <a href="<%= url_for :action => :reset %>" class="list-group-item">
        <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span>
        Reset Database
      </a>

      <a href="<%= url_for :action => :do_sync %>" class="list-group-item">
        <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span>
        Perform Sync
      </a>

      <% if Rho::RhoConnectClient.isLoggedIn %>
          <a href="<%= url_for :action => :logout %>" class="list-group-item">
            <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span>
            Logout
          </a>

      <% else %>
          <a href="<%= url_for :action => :login %>" class="list-group-item">
            <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true"></span>
            Login
          </a>
      <% end %>


      <li class="list-group-item">
        <div class="row">
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <span pull-right>Barcode scanner:</span>
          </div>
          <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
            <% Rho::Barcode.enumerate.each do |scanner| %>
                <label class="radio-inline" style="margin: 1em">
                  <input type="radio" name="barcodeScanner" value="<%= scanner.friendlyName %>" <%= barcodeScannerChoosed(scanner) %>>
                  <%= barcodeScannerName(scanner) %>
                </label>
            <% end %>
          </div>
        </div>
      </li>


    </div>

  </div>

</div>

<script>
    $(document).ready(function () {

//        $("#scannerSelection").change(function () {
//            alert($("#scannerSelection").val());
//            Rho.Config.setPropertyString("barcodeScanner", $("#scannerSelection").val(), true);
//        });

        $('input').on('change', function () {
            var value = $('input[name=barcodeScanner]:checked').val();
            Rho.Config.setPropertyString("barcodeScanner", value, true);
        });

    })
</script>