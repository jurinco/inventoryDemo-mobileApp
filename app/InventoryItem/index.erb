<div id="header">
  <span id="button-menu" class="glyphicon glyphicon-menu-hamburger"></span>
  <span class="title">Items</span>
  <a href="<%= url_for :action => :new %>" class="btn btn-primary pull-right">New</a>
</div>

<div class="list-group">
  <% @inventoryItems.each do |item| %>

      <a href="<%= url_for :action => :show, :id => item.object %>" class="list-group-item">
        <span class="glyphicon glyphicon-chevron-right pull-right" aria-hidden="true" style="margin-top: 1em"></span>
        <span class="pull-right" style="margin-top: 1em; margin-right: 1em"><%= item.quantity %> pcs</span>
        <%= item.productName %><br/>
        <small><%= item.upc %></small>
        <br/>
      </a>

  <% end %>

</div>
