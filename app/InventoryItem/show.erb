<div class="row page-title">
  <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
    <a href="<%= url_for :action => :index %>" class="btn btn-default btn-sm pull-left">Back</a>
  </div>
  <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
    <h3 class="text-center"><%= @inventoryItem.productName %></h3>
  </div>
  <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
    <a href="<%= url_for :action => :edit, :id => @inventoryItem.object %>" class="btn btn-primary btn-sm pull-right">Edit</a>
  </div>
</div>

<div class="row">
  <ul class="list-group">

    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span pull-right><strong>UPC</strong></span>
        </div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
          <%= @inventoryItem.upc %>
        </div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span pull-right><strong>Product Name</strong></span>
        </div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
          <%= @inventoryItem.productName %>
        </div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span pull-right><strong>Quantity</strong></span>
        </div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
          <%= @inventoryItem.quantity %>
        </div>
      </div>
    </li>

    <li class="list-group-item">
      <div><strong>Photo</strong></div>
      <div class="row">
        <% if @inventoryItem.photoUri %>
            <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
              <div class="thumbnail">
                <img src="<%= Rho::Application.expandDatabaseBlobFilePath(@inventoryItem.photoUri) %>">
              </div>
            </div>
        <% end %>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span pull-right><strong>Employee Id</strong></span>
        </div>
        <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
          <%= @inventoryItem.employeeId %>
        </div>
      </div>
    </li>

    <li class="list-group-item">
      <div class="row">
        <div class="col-xs-4 col-sm-4 col-md-4 col-lg-4">
          <span pull-right><strong>Signature</strong></span>
        </div>

        <div class="col-lg-4 col-md-4 col-sm-4 col-xs-4">
          <% if @inventoryItem.signatureUri %>
              <div class="thumbnail">
                <img src="<%= Rho::Application.expandDatabaseBlobFilePath(@inventoryItem.signatureUri) %>">
              </div>
          <% else %>
              ---
          <% end %>
        </div>

      </div>
    </li>

  </ul>

</div>
