<div class="row page-title">
  <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
    <a href="<%= url_for :action => :show, :id => @inventoryItem.object %>" class="btn btn-default btn-sm pull-left">Cancel</a>
  </div>
  <div class="col-xs-8 col-sm-8 col-md-8 col-lg-8">
    <h3 class="text-center">Edit <%= @inventoryItem.productName %></h3>
  </div>
  <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
    <a href="<%= url_for :action => :delete, :id => @inventoryItem.object %>" class="btn btn-danger btn-sm pull-right">Delete</a>
  </div>
</div>

<form method="POST" action="<%= url_for :action => :update %>">
  <input type="hidden" name="id" value="<%= @inventoryItem.object %>"/>


  <div class="form-group">
    <label for="incident[upc]">UPC</label>
    <input type="text" id="incident[upc]" name="incident[upc]" value="<%= @inventoryItem.upc %>" <%= placeholder("Upc") %> class="form-control"/>
  </div>

  <div class="form-group">
    <label for="incident[productName]">Product name</label>
    <input type="text" id="incident[productName]" name="incident[productName]" value="<%= @inventoryItem.productName %>" <%= placeholder("Productname") %> class="form-control"/>
  </div>

  <div class="form-group">
    <label for="incident[damageReason]">Quantity</label>
    <input type="text" id="incident[quantity]" name="incident[quantity]" value="<%= @inventoryItem.quantity %>" <%= placeholder("Quantity") %> class="form-control"/>
  </div>

  <button type="submit" class="btn btn-success btn-block">Update</button>
</form>


